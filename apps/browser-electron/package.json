{
  "name": "@aura/browser-electron",
  "version": "1.0.0",
  "description": "AURA Browser - Proprietary OSINT Browser",
  "main": "main/main.js",
  "scripts": {
    "dev": "electron main/main.js",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "38.2.2",
    "electron-builder": "^24.0.0",
    "electron-updater": "^6.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.aura.osint.browser",
    "productName": "AURA Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "../../backend/**/*",
      "../../scripts/**/*",
      "../../live-tracker/**/*"
    ],
    "extraResources": [
      {
        "from": "../../backend",
        "to": "backend"
      },
      {
        "from": "../../scripts",
        "to": "scripts"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "entitlements": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "publisherName": "AURA OSINT"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "SKDesing",
      "repo": "AURA-OSINT-ADVANCED-ECOSYSTEM"
    }
  }
}
