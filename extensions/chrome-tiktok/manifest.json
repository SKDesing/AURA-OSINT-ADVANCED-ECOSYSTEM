{
  "manifest_version": 3,
  "name": "AURA OSINT - TikTok Analyzer",
  "version": "1.0.0",
  "description": "Professional OSINT extension for TikTok content analysis",
  
  "permissions": [
    "webRequest",
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.tiktok.com/*",
    "*://*.musical.ly/*"
  ],
  
  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "content_scripts": [{
    "matches": ["*://*.tiktok.com/*"],
    "js": ["scripts/content.js"],
    "run_at": "document_start"
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AURA OSINT TikTok"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }
}