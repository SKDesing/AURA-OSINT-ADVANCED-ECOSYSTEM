{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LLMInteraction",
  "type": "object",
  "required": ["ts", "request_id", "model", "prompt_hash", "output_hash", "latency_ms", "input_tokens", "output_tokens"],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of interaction"
    },
    "request_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique request identifier"
    },
    "model": {
      "type": "string",
      "description": "Model name used for generation"
    },
    "role_system": {
      "type": "string",
      "description": "Hash of system prompt if used"
    },
    "prompt_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA256 hash of user prompt"
    },
    "raw_prompt_redacted": {
      "type": ["string", "null"],
      "description": "Redacted prompt text (null if AI_LOG_PROMPTS=false)"
    },
    "output_text": {
      "type": ["string", "null"],
      "description": "Generated text (null if AI_LOG_PROMPTS=false)"
    },
    "output_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA256 hash of output"
    },
    "task_type": {
      "type": "string",
      "enum": ["classification", "summary", "extraction", "generation", "harassment_detection", "internal_test"],
      "description": "Type of AI task performed"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags for categorization (osint, fr, en, etc.)"
    },
    "latency_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Processing latency in milliseconds"
    },
    "input_tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated input token count"
    },
    "output_tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated output token count"
    },
    "blocked": {
      "type": "boolean",
      "description": "Whether request was blocked by guardrails"
    },
    "block_reason": {
      "type": ["string", "null"],
      "description": "Reason for blocking if applicable"
    }
  }
}